{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <h1>Campus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campus.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ campus.nom }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ campus.dateCreated ? campus.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModified</th>
                <td>{{ campus.dateModified ? campus.dateModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('campus_list') }}">back to list</a>

    <a href="{{ path('campus_edit', {'id': campus.id}) }}">edit</a>

    {{ include('campus/_delete_form.html.twig') }}
{% endblock %}
