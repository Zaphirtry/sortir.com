<form method="post" action="{{ path('campus_delete', {'id': campus.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce campus ?');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campus.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
