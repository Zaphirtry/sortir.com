{% extends 'base.html.twig' %}

{% block title %}Reinitialiser son mot de passe | {{ parent() }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Reinitialiser son mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre email, vous receverez un lien pour reinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le lien</button>
    {{ form_end(requestForm) }}
{% endblock %}
