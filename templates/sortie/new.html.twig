{% extends 'base.html.twig' %}

{% block title %}Nouvelle Sortie | {{ parent() }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Créer une nouvelle sortie</h1>
            <a href="{{ path('main_home') }}" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
        <div class="card-body">
            {{ include('sortie/_form.html.twig', {'buttons_créer': 'Créer'}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ importmap('app') }}
    <script type="module">
        import { FormHandler } from '/assets/javascript/sortie-form.js';
        
        document.addEventListener('DOMContentLoaded', () => {
            FormHandler.init({
                villeSelect: '#{{ form.ville.vars.id }}',
                lieuSelect: '#{{ form.lieu.vars.id }}',
                rueInput: '#lieu-rue',
                codePostalInput: '#lieu-code-postal',
                latitudeInput: '#lieu-latitude',
                longitudeInput: '#lieu-longitude'
            });
        });
    </script>
{% endblock %}
