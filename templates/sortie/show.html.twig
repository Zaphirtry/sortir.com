{% extends 'base.html.twig' %}

{% block title %}Détails de la Sortie | {{ parent() }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Détails de la Sortie</h1>
            <div>
                <a href="{{ path('main_home') }}" class="btn btn-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-warning btn-sm">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
            </div>
        </div>
        <div class="card-body">
            {{ include('sortie/_form.html.twig', {
                'button_label': false,
                'disabled': true
            }) }}
        </div>
        <div class="card-footer text-end">
            {{ include('sortie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sortie-form.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            FormHandler.init({
                villeSelect: '#{{ form.ville.vars.id }}',
                lieuSelect: '#{{ form.lieu.vars.id }}',
                rueInput: '#lieu-rue',
                codePostalInput: '#lieu-code-postal',
                latitudeInput: '#lieu-latitude',
                longitudeInput: '#lieu-longitude'
            });
        });
    </script>
{% endblock %}
