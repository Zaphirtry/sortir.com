{% extends 'base.html.twig' %}

{% block title %}Annuler une sortie | {{ parent() }}{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h3 mb-0"><i class="bi bi-calendar-x"></i> Annuler la sortie</h1>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="mb-4">
                        <h4 class="border-bottom pb-2"><i class="bi bi-info-circle"></i> Informations de la sortie</h4>
                        <table class="table table-hover">
                            <tbody>
                            <tr>
                                <th class="w-25">Nom de la sortie :</th>
                                <td>{{ sortie.nom }}</td>
                            </tr>
                            <tr>
                                <th>Date de la sortie :</th>
                                <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                            </tr>
                            <tr>
                                <th>Campus :</th>
                                <td>{{ sortie.campus.nom }}</td>
                            </tr>
                            <tr>
                                <th>Lieu :</th>
                                <td>{{ sortie.lieu.nom }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="mt-4">
                            <h4>Motif de l'annulation</h4>
                            {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_widget(form, {
                                    'attr': {
                                        'class': 'form-control',
                                        'rows': 4,
                                        'placeholder': 'Veuillez indiquer le motif de l\'annulation...'
                                    }
                                }) }}
                                {{ form_errors(form) }}
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-x-circle"></i> Confirmer l'annulation
                                </button>
                                <a href="{{ path('main_home') }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Retour
                                </a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
