{% extends 'base.html.twig' %}

{% block title %}Modifier le message | {{ parent() }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h1 class="mb-0">Modifier le message</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Enregistrer
                    </button>
                    <a href="{{ path('sortie_show', {'id': message.sortie.id}) }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
