        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Créer un nouveau groupe</h1>
            <a href="{{ path('groupe_list') }}" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
        <div class="card-body">
            {{ include('groupe/_form.html.twig') }}
            <a href="{{ path('groupe_list') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </div>
{% endblock %}
