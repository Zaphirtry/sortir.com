{% extends 'base.html.twig' %}

{% block title %}Modifier le groupe{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Modifier le groupe</h1>
            <a href="{{ path('groupe_list') }}" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
        <div class="card-body">
            {{ include('groupe/_form.html.twig', {'button_label': 'Modifier'}) }}
            <form method="post" action="{{ path('groupe_delete', {'id': groupe.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ groupe.id) }}">
                <button class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Supprimer
                </button>
            </form>
            <a href="{{ path('groupe_list') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </div>
{% endblock %}
