{% extends 'base.html.twig' %}

{% block title %}Accueil | {{ parent() }}{% endblock %}

{% block body %}
  {{ form_start(searchForm) }}
  <div class="row">
    <div class="col-md-4">
      {{ form_row(searchForm.nom) }}
    </div>
    <div class="col-md-3">
      {{ form_row(searchForm.dateDebut) }}
    </div>
    <div class="col-md-3">
      {{ form_row(searchForm.dateFin) }}
    </div>
    <div class="col-md-2 mt-4">
      <button type="submit" class="btn btn-primary">Rechercher</button>
    </div>
  </div>
  {{ form_end(searchForm) }}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h1 class="mb-0">Liste des sorties</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nom de la sortie</th>
                        <th>Date de la sortie</th>
                        <th>Date limite d'inscription</th>
                        <th>Inscrits/Places</th>
                        <th>État</th>
                        <th>Inscrit</th>
                        <th>Organisateur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for sortie in sorties %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                        <td>{{ sortie.dateLimiteInscription|date('d/m/Y H:i') }}</td>
                        <td>{{ sortie.participant|length }}/{{ sortie.nbInscriptionsMax }}</td>
                        <td><span class="badge bg-info">{{ sortie.etat.libelle }}</span></td>
                        <td class="text-center">
                            {% if app.user in sortie.participant %}
                                <span class="fw-bold text-success">X</span>
                            {% endif %}
                        </td>
                        <td><a href="{{ path('app_profile', {'pseudo': sortie.organisateur.pseudo}) }}">{{ sortie.organisateur.pseudo }}</a></td>


{#                        Colonne Afficher#}
                        <td>
                            <a href="{{ path('sortie_show', {'id': sortie.id}) }}" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> Afficher
                            </a>
                            {# Boutons d'actions : Se désister, S'inscrire, Modifier, Annuler #}

                                {% if app.user and app.user not in sortie.participant and (sortie.etat.libelle == 'Ouverte') %}
                                    <form action="{{ path('sortie_inscrire', {'id': sortie.id}) }}" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="bi bi-person-plus"></i> S'inscrire
                                        </button>
                                    </form>
                                {% endif %}

                                {% if app.user and app.user in sortie.participant and (sortie.etat.libelle == 'Ouverte' or sortie.etat.libelle == 'Clôturée') %}
                                    <form action="{{ path('sortie_desister', {'id': sortie.id}) }}" method="POST" style="display: inline;">
                                    <button type="submit " class="btn btn-sm btn-warning">
                                        <i class="bi bi-person-dash"></i> Se désister
                                    </button>
                                    </form>
                                {% endif %}

                                {% if sortie.organisateur == app.user %}
                                    <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-warning btn-sm shadow-sm">
                                        <i class="bi bi-pencil-square me-2"></i>Modifier
                                    </a>
                                {% endif %}

                            {% if sortie.organisateur == app.user and (sortie.etat.libelle == 'Ouverte' or sortie.etat.libelle == 'Clôturée')%}
                             <a href="{{ path('sortie_cancel', {'id': sortie.id}) }}" class="btn btn-sm btn-warning">
                                <i class="bi bi-calendar2-x"></i> Annuler
                            </a>
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') and (sortie.etat.libelle == 'Ouverte' or sortie.etat.libelle == 'Clôturée') %}
                                <a href="{{ path('sortie_cancel', {'id': sortie.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-calendar2-x"></i> Annuler
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a href="{{ path('sortie_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Créer une sortie
            </a>
        </div>
    </div>
{% endblock %}
